                        <MenuItem x:Name="EditDeliveryComposition" Header="Редактировать" Click="EditDeliveryComposition_Click"/>
                        <MenuItem x:Name="DeleteDeliveryComposition" Header="Удалить" Click="DeleteDeliveryComposition_Click"/>
                        <MenuItem x:Name="FiltrationDeliveryComposition" Header="Фильтрация" Click="FiltrationDeliveryComposition_Click"/>
                        <MenuItem x:Name="SearchDeliveryComposition" Header="Поиск" Click="SearchDeliveryComposition_Click"/>
                        <MenuItem x:Name="CancelDeliveryComposition" Header="Отменить" Click="CancelDeliveryComposition_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
            <DataGrid   
                Margin="90,60,30,30"
                Visibility="Collapsed"
                x:Name="RecordCardGrid" 
                AutoGenerateColumns="false"
                CanUserResizeColumns="False" 
                FontSize="15px"
                CanUserAddRows="False" 
                CanUserDeleteRows="False" 
                CanUserReorderColumns="False" 
                SelectionMode="Single" 
                SelectionUnit="FullRow" 
                CanUserResizeRows="False" 
                IsReadOnly="True"
                Foreground="#FF7643D2"
                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="CardId" Binding="{Binding record_card_id}" Visibility="Collapsed"/>
                    <DataGridTextColumn Header="Номер карточки" Width="*" Binding="{Binding card_number}"/>
                    <DataGridTextColumn Header="Дата" Width="*" Binding="{Binding date, StringFormat=dd.MM.yyyy}"/>
                    <DataGridTextColumn Header="Продукт" Width="*" Binding="{Binding title}"/>
                    <DataGridTextColumn Header="Подразделение" Width="*" Binding="{Binding division_type}"/>
                    <DataGridTextColumn Header="Фамилия" Width="*" Binding="{Binding surname}"/>
                    <DataGridTextColumn Header="Количество коров" Width="*" Binding="{Binding cow_quantity}"/>
                    <DataGridTextColumn Header="Утро" Width="*" Binding="{Binding morning}"/>
                    <DataGridTextColumn Header="Полдень" Width="*" Binding="{Binding midday}"/>
                    <DataGridTextColumn Header="Вечер" Width="*" Binding="{Binding evening}"/>
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="AddRecordCard" Header="Добавить" Click="AddRecordCard_Click"/>
                        <MenuItem x:Name="EditRecordCard" Header="Редактировать" Click="EditRecordCard_Click"/>
                        <MenuItem x:Name="DeleteRecordCard" Header="Удалить" Click="DeleteRecordCard_Click"/>
                        <MenuItem x:Name="FiltrationRecordCard" Header="Фильтрация" Click="FiltrationRecordCard_Click"/>
                        <MenuItem x:Name="SearchRecordCard" Header="Поиск" Click="SearchRecordCard_Click"/>
                        <MenuItem x:Name="CancelRecordCard" Header="Отменить" Click="CancelRecordCard_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        </Grid>
        <Grid x:Name="GridMenu" Width="60" HorizontalAlignment="Left" Background="#19000000">
            <StackPanel>
                <Grid Height="60">
                    <Button x:Name="ButtonCloseMenu" Width="60" Height="60" VerticalAlignment="Top" HorizontalAlignment="Right" Visibility="Collapsed" Click="ButtonCloseMenu_Click" Background="#66673AB7">
                        <materialDesign:PackIcon Kind="ArrowLeft" Foreground="WHITE" Width="25" Height="25"/>
                    </Button>
                    <Button x:Name="ButtonOpenMenu" Width="60" Height="60" VerticalAlignment="Top" HorizontalAlignment="Right" Click="ButtonOpenMenu_Click" Background="#66673AB7">
                        <materialDesign:PackIcon Kind="Menu" Foreground="WHITE" Width="25" Height="25"/>
                    </Button>
                </Grid>
                <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" Foreground="#FF003B75" FontSize="15px">
                    <ListViewItem x:Name="Contractor" Height="60" PreviewMouseLeftButtonDown="Contractor_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="NewspaperPlus" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Контрагенты" VerticalAlignment="Center" Margin="0 10" Foreground="White" FontWeight="Medium" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60" x:Name="Employee" Visibility="Visible" PreviewMouseLeftButtonDown="Employee_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="BookAccount" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Сотрудники" VerticalAlignment="Center" Margin="0 10" Foreground="White" FontWeight="Medium" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem Height="60" x:Name="Division" Visibility="Visible" PreviewMouseLeftButtonDown="Division_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountGroup" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Подразделение" VerticalAlignment="Center" Margin="0 10" Foreground="White" FontWeight="Medium" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="Cettle" Height="60" Visibility="Visible" PreviewMouseLeftButtonDown="Cettle_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Pig" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Группы скота" VerticalAlignment="Center" Margin="0 10" Foreground="White" FontWeight="Medium" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="Product" Height="60" Visibility="Visible" PreviewMouseLeftButtonDown="Product_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ScriptOutline" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Продукция" VerticalAlignment="Center" Margin="0 10" Foreground="White" FontWeight="Medium" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="2" Background="White" Margin="0 0" Padding="0 0"/>
                    <ListViewItem x:Name="RecordCard" Height="60" Visibility="Visible" PreviewMouseLeftButtonDown="RecordCard_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CardOutline" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock VerticalAlignment="Center" Margin="0 0" TextWrapping="Wrap" Width="150" FontWeight="Medium" Foreground="White" Opacity="0.7">
                                <Run Text="Карточка учёта"/><LineBreak/>
                                <Run Text="надоя молока"/>
                            </TextBlock>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="Statement" Height="60" Visibility="Visible" PreviewMouseLeftButtonDown="Statement_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PiHole" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Расход кормов" VerticalAlignment="Center" Margin="0 10" FontWeight="Medium" Foreground="White" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="Waybill" Height="60" Visibility="Visible" PreviewMouseLeftButtonDown="Waybill_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileDocument" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Реализация" VerticalAlignment="Center" Margin="0 10" FontWeight="Medium" Foreground="White" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="DeliveryNote" Height="60" Visibility="Visible" PreviewMouseLeftButtonDown="DeliveryNote_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TextBoxOutline" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Требования" VerticalAlignment="Center" Margin="0 10" FontWeight="Medium" Foreground="White" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="DeliveryNoteComposition" Height="60" Visibility="Visible" PreviewMouseLeftButtonDown="DeliveryNoteComposition_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="TextBoxPlusOutline" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Состав требования" VerticalAlignment="Center" Margin="0 10" FontWeight="Medium" Foreground="White" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Height="2" Background="White" Margin="0 0" Padding="0 0"/>
                    <ListViewItem x:Name="DocumentOutput" Height="60" Visibility="Visible" PreviewMouseLeftButtonDown="DocumentOutput_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FileWord" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Документы" VerticalAlignment="Center" Margin="0 10" FontWeight="Medium" Foreground="White" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                    <ListViewItem x:Name="AdminRegistration" Height="60" Visibility="Collapsed" PreviewMouseLeftButtonDown="AdminRegistration_PreviewMouseLeftButtonDown">
                        <StackPanel Orientation="Horizontal" >
                            <materialDesign:PackIcon Kind="AccountPlusOutline" Height="25" Width="25" Margin="10" VerticalAlignment="Center" Foreground="White" Opacity="0.7"/>
                            <TextBlock Text="Регистрация" VerticalAlignment="Center" Margin="0 10" FontWeight="Medium" Foreground="White" Opacity="0.7"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>
        </Grid>
    </Grid>
</Window>